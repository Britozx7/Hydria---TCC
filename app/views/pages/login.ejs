<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
      rel="stylesheet"
    />
    <title>Login / Cadastro</title>
    <link rel="stylesheet" href="../css/login.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
  </head>
  
  <body>
    <main>
      <a href="/"
      ><button class="btn-01"><i class="fas fa-arrow-left"></i></button
        ></a>
        <section class="container">
          <section class="form-card">
            <section class="logo">LOGO</section>
            <section class="tabs">
              <button class="tab-button active" id="login-tab">LOGIN</button>
              <button class="tab-button" id="signup-tab">CADASTRE-SE</button>
            </section>
            
            <%
                const msgErro = { login_email: "", login_password: "" };
                const cssErro = { login_email: "", login_password: "" };


              if (typeof listaErros !== 'undefined' && listaErros && listaErros.errors) {
                
                  listaErros.errors.forEach((erro) => {
                    if (erro.path === "login_email") {
                      msgErro.login_email = erro.msg;
                      cssErro.login_email = "erro-form";
                    } else if (erro.path === "login_password") {
                      msgErro.login_password = erro.msg;
                      cssErro.login_password = "erro-form";
                    }
                  });
              }
              
            %>
          <form
            action="/login"
            method="post"
            id="login-form"
            class="form-section active"
          >
            <section class="input-group">
              <label for="login_email">Email</label>
              <input
                type="text"
                name="login_email"
                id="login-email"
                placeholder="Seu email"
                class="<%= cssErro.login_email %>"
              />
              <span><%= msgErro.login_email %></span>
            </section>
            <section class="input-group">
              <label for="login_password">Senha</label>
              <input
                type="password"
                name="login_password"
                id="login-password"
                placeholder="Sua senha"
                class="<%= cssErro.login_password %>"
              />
              <span><%= msgErro.login_password %></span>
            </section>
            <button type="submit" value="login" class="btn primary-btn">
              ENTRAR
            </button>
          </form>

          <form id="signup-form" class="form-section">
            <section class="input-group">
              <label for="signup-name">Nome Completo</label>
              <input
                type="text"
                id="signup-name"
                placeholder="Seu nome completo"
              />
            </section>
            <section class="input-group">
              <label for="signup-email">Email</label>
              <input
                type="email"
                id="signup-email"
                placeholder="Seu melhor email"
              />
            </section>
            <section class="input-group">
              <label for="signup-password">Senha</label>
              <input
                type="password"
                id="signup-password"
                placeholder="Crie sua senha"
              />
            </section>
            <button type="submit" class="btn primary-btn">CADASTRAR</button>
          </form>

          <section class="social-login">
            <button class="social-btn google">
              <i class="fab fa-google"></i> Google
            </button>
            <button class="social-btn facebook">
              <i class="fab fa-facebook-f"></i> Facebook
            </button>
          </section>
        </section>
      </section>
    </main>
    <script src="../js/login.js"></script>
  </body>
</html>
